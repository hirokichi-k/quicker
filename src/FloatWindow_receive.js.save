
import React from 'react';
import Button from '@material-ui/core/Button';
import Dialog from '@material-ui/core/Dialog';
import DialogActions from '@material-ui/core/DialogActions';
import DialogContent from '@material-ui/core/DialogContent';
import DialogContentText from '@material-ui/core/DialogContentText';
import DialogTitle from '@material-ui/core/DialogTitle';
import CopyToClipboard from 'react-copy-to-clipboard';


export default function AlertDialog() {

    // state = {value: 'some\ntext', copied: false};

    const [open, setOpen] = React.useState(true);

    const handleClose = () => {
        setOpen(false);
    };

    const state = {value: 'some\ntext', copied: false};

    const onChange = ({target: {value}}) => {
        this.setState({value, copied: false});
    };

    const onCopy = () => {
        this.setState({copied: true});
    };

    return (
        <div>
            <Dialog
                open={open}
                state={state}
                onClose={handleClose}
                on_Change={onChange}
                on_Copy={onCopy}
                aria-labelledby="alert-dialog-title"
                aria-describedby="alert-dialog-description"
            >
                <DialogTitle id="alert-dialog-title">{"認証成功"}</DialogTitle>
                <textarea onChange={onChange} value={state.value} />
                <CopyToClipboard onCopy={onCopy} text={state.value}>
                    <button>Copy to clipboard with button</button>
                </CopyToClipboard>
                <DialogActions>
                    <Button onClick={handleClose} color="primary" autoFocus>
                        OK
            </Button>
                </DialogActions>
            </Dialog>
        </div>
    );
}
